@model perseptus.PresentationEntity.ImagesListPE
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>

    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

@Model.Images.Count()
<br />
@foreach (var image in Model.Images)
{
    <img src="@Url.Action("Index", "Image" , new { id = image})" height="450"><br /><br />
}

<div id="loading">
    <div id="loadingcont">
        <p id="loadingspinr">
            <span id="imageProcessing">Обработка изображения ...</span>
            <span id="imageLoading">Загрузка изображения ...</span>
            <br />
            <img src="~/Content/loading.gif">
        </p>
    </div>
</div>


<fieldset class="formPhotoUpload formPhotoUpload1">
    <table>
        <tr>
            <td>
                <div id="selector1" class="fileSelector">
                </div>
            </td>
        </tr>
    </table>

    <div class="btn-toolbar">
        <button class="1 btn btn-primary btnImgUpload" data-url="@Url.Action("DoImportJSON", "Home")">Загрузить</button>
    </div>

</fieldset>
<fieldset class="photoUploadResult photoUploadResult1" style="display: none;">
    <p>Фотография успешно загружена!</p>
</fieldset>
<hr class="dixy-hr" />



